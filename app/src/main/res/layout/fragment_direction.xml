<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.DirectionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_view_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:background="@color/backgound"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="vertical">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                    <LinearLayout
                        android:id="@+id/ll_botumn"
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:layout_marginRight="@dimen/dimen_10"
                        android:background="@color/white"
                        android:orientation="vertical">

                    </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:padding="@dimen/dimen_5"
                        android:text="18 Honeyvate st Drewvale Qld41166"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/txt_16"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_40"
                        android:layout_marginRight="@dimen/dimen_40"
                        android:padding="@dimen/dimen_5"
                        android:background="@drawable/btn_square_border"
                        android:text="Navigate"
                        android:textSize="@dimen/txt_16"
                        android:textColor="@color/pink"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_65"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/image_40"
                        android:layout_height="@dimen/image_40"
                        android:padding="@dimen/dimen_5"
                        android:src="@drawable/telephone"
                        android:layout_marginRight="@dimen/dimen_20"
                        android:tint="@color/blue"/>

                    <ImageView
                        android:layout_width="@dimen/image_40"
                        android:layout_height="@dimen/image_40"
                        android:padding="@dimen/dimen_5"
                        android:layout_marginRight="@dimen/dimen_20"
                        android:src="@drawable/facebook"
                        />

                    <ImageView
                        android:layout_width="@dimen/image_40"
                        android:layout_height="@dimen/image_40"
                        android:padding="@dimen/dimen_5"
                        android:src="@drawable/worldwide"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:background="@color/gray"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="@dimen/image_70"
        android:layout_height="@dimen/image_70"
        android:layout_marginTop="200dp"
        android:padding="@dimen/dimen_20"
        android:layout_gravity="right"
        android:background="@drawable/share_bgleft"
        android:src="@drawable/share"
        android:tint="@color/pink"/>



</FrameLayout>