<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgound"
    tools:context=".activity.VendorSIgnInDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/pink"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/image_35"
                android:layout_height="@dimen/image_35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_back"
                android:text="Return"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_18" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_list_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:background="@drawable/btn_round_bg"
                android:padding="@dimen/dimen_10"
                android:src="@drawable/cooking"
                android:tint="@color/pink" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List Special"
                android:textColor="@color/pink"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_30"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dimen_10">

                <ImageView
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_60"
                    android:background="@drawable/btn_round_bg"
                    android:padding="@dimen/dimen_10"
                    android:src="@drawable/man"
                    android:tint="@color/pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/pink"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="@dimen/dimen_10">

                <ImageView
                    android:id="@+id/iv_contactus"
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_60"
                    android:background="@drawable/btn_round_bg"
                    android:padding="@dimen/dimen_10"
                    android:src="@drawable/chat"
                    android:tint="@color/pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Us"
                    android:textColor="@color/pink"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginRight="@dimen/dimen_30"
            android:layout_marginLeft="@dimen/dimen_30"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_list_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dimen_10">

                <ImageView
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_60"
                    android:background="@drawable/btn_round_bg"
                    android:padding="@dimen/dimen_10"
                    android:src="@drawable/newspaper"
                    android:tint="@color/pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Listing History"
                    android:textColor="@color/pink"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:padding="@dimen/dimen_10">

                <ImageView
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_60"
                    android:background="@drawable/btn_round_bg"
                    android:padding="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:src="@drawable/ic_settings_black_24dp"
                    android:tint="@color/pink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:text="Analytics"
                    android:textColor="@color/pink"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
           >

            <ImageView
                android:layout_width="@dimen/dimen_60"
                android:layout_height="@dimen/dimen_60"
                android:background="@drawable/btn_round_bg"
                android:padding="@dimen/dimen_10"
                android:src="@drawable/notification"
                android:tint="@color/pink" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textColor="@color/pink"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_30"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_vendor_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_yellow_bg"
            android:drawableRight="@drawable/ic_star_black_24dp"
            android:drawablePadding="@dimen/dimen_10"
            android:drawableTint="@color/white"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:paddingRight="@dimen/dimen_10"
            android:text="4.5"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_18"/>

        <TextView
            android:id="@+id/tv_vendor_total_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10"
            android:gravity="center"
            android:text="from 99 reviews"
            android:textSize="@dimen/txt_16"
            android:textColor="@color/gray"/>


    </LinearLayout>

    </LinearLayout>

</LinearLayout>