<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ContactUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/pink"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/image_35"
                android:layout_height="@dimen/image_35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_10"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                android:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_back"
                android:text="Return"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_18" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:textSize="@dimen/txt_25"
        android:textColor="@color/black"
        android:textStyle="normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="Company Name :"
                    android:paddingRight="@dimen/dimen_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_compneyname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="ABC compney"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dimen_10"
                    android:layout_weight="0.5"
                    android:text="Business Name :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_business"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="xyz business"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dimen_10"
                    android:layout_weight="0.5"
                    android:text="Address :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="B 500,abc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:paddingRight="@dimen/dimen_10"
                    android:text="Phone Number :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="134567890"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dimen_10"
                    android:layout_weight="0.5"
                    android:text="Country :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="USA"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dimen_10"
                    android:layout_weight="0.5"
                    android:text="Email :"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="abc@gmail.com"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_18"
                    android:textStyle="normal" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>